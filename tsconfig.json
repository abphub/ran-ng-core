{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ckeditor": [
        "dist/ckeditor"
      ],
      "ckeditor/*": [
        "dist/ckeditor/*"
      ],
      "assets-finder": [
        "dist/assets-finder"
      ],
      "assets-finder/*": [
        "dist/assets-finder/*"
      ]
    }
  }
}